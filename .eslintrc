{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],

        "no-console": 1,

        "no-unused-vars": 1,

        "space-infix-ops": ["error", {"int32Hint": false}],

        "space-before-blocks": ["error"],

        "comma-spacing": ["error", { "before": false, "after": true }]
    }
}